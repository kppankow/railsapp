<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
<div class="row">
  <div class="col-md-4">
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-group", placeholder: "Enter Name", required: "true" %>
    </div>      
    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "form-group", placeholder: "Enter Email", required: "true" %>
    </div>
    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, nil, class: "form-group", placeholder: "Enter Message", required: "true" %>
    </div>      
  </div>
</div>
<%= submit_tag "Send", class: "btn btn-primary contact_button" %>   
<% end %>
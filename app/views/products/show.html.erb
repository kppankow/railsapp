<p id="notice"><%= notice %></p>
<div class= "show_product" data-product-id="<%= @product.id %>">
  <% cache @product do %>
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= @product.image_url %>
    <%= image_tag(@product.image_url, class: "img-responsive img-zoom", data_zoom_image: "@product.image_url") %>
  </p>

  <p>
    <strong>Colour:</strong>
    <%= @product.colour %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>
  <div class="payment">
    <% if signed_in? && current_user.admin? %>
      <%= form_tag "/payments/create" do %>
        <%= hidden_field_tag(:product_id, @product.id) %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
    <% end %>


  <p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div></p>
  

</div>
  <% if signed_in? && current_user.admin? %>
  <div id="edit product">
    <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-basic" %> |
    <%= link_to 'Back', products_path, class: "btn btn-basic" %>
  </div>
  <% end %>

<div id= "comments">
  <div class="alert alert-info" style="display:none" role="alert">A new comment was posted</div>
  <%= render 'new_comment' %>
  <%= render 'comments' %>
</div>
  <div class="digg_pagination">
    <%= will_paginate @comments %>
  </div>

  <% end %>
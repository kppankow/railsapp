<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
  <%= image_tag(@product.image_url, class: "img-responsive my-image") %>
</p>

<P>
  <strong>Colour:</strong>
  <%= @product.colour %>
</P>

<P>
  <strong>Price:</strong>
  <%= @product.price %>
</P>

<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>

<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <div class="rating"></div>
    </p>  
    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>
<%= link_to('Edit', edit_product_path(@product), class: "btn btn-basic") %>
<%= link_to('Back', products_path, class: "btn btn-basic") %>


<%= render 'comments' %>

    <div class="digg_pagination">
      <%= will_paginate @comments %>
    </div>




